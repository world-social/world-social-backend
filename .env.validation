# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=
S3_BUCKET_VALIDATION=world-social-validation

# Railway Configuration (will be auto-populated during deployment)
DATABASE_URL=
REDIS_URL=

# Application Settings
NODE_ENV=validation
PORT=3000
JWT_SECRET=your-validation-jwt-secret
JWT_EXPIRY=7d

# Video Settings
MAX_VIDEO_SIZE=5242880  # 5MB in bytes
VIDEO_RETENTION_DAYS=7

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100  # requests per window

# Logging
LOG_LEVEL=info

# Security
CORS_ORIGIN=*  # Update with your frontend URL when deployed
API_KEY_HEADER=X-API-Key
API_KEY=your-validation-api-key 