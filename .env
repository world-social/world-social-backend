# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/worldsocial?schema=public"
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=worldsocial

# JWT Configuration
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=24h

# Redis Configuration
REDIS_URL=redis://redis:6379

CACHE_DURATION=3600 # Cache duration in seconds (1 hour)

# Video Settings
MAX_VIDEO_SIZE=5242880  # 5MB in bytes
VIDEO_RETENTION_DAYS=7

# MinIO Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=socialworldworldcoin

# World MiniKit SDK Configuration
WORLD_MINI_KIT_API_KEY=your_api_key
WORLD_MINI_KIT_API_SECRET=your_api_secret

# Smart Contract Configuration
SMART_CONTRACT_ADDRESS=your_contract_address
ETHEREUM_NETWORK=goerli

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3001 